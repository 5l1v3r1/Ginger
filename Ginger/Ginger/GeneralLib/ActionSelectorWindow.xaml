    <Window x:Class="GingerWPF.GeneralLib.ActionSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GingerWPF.GeneralLib"
        mc:Ignorable="d"
        Title="Action Selector Window" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="223*"/>
            <RowDefinition Height="46*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="MainList" FontSize="14" MouseDoubleClick="MainList_MouseDoubleClick" KeyDown="MainList_KeyDown"/>
        <Button x:Name="SelectButton" Click="SelectButton_Click" Grid.Row="1">Select</Button>
    </Grid>
</Window>
