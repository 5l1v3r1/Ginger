    <Page x:Class="GingerWPF.PluginsLib.AddPluginWizardLib.PlugPackageinInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GingerWPF.PluginsLib.AddPluginWizardLib"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="PluginInfoPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="125"/>
            <RowDefinition Height="101*"/>
            <RowDefinition Height="374*"/>
        </Grid.RowDefinitions>
        <StackPanel >
            <Label>Plugin Info</Label>
            <Label>Name</Label>
            <TextBox x:Name="NameTextBox"></TextBox>
            <Label>Folder</Label>
            <TextBox x:Name="FolderTextBox" IsReadOnly="True" IsEnabled="False"></TextBox>


        </StackPanel>

        <StackPanel Grid.Row="1">
            <Label>Services</Label>
            <DataGrid x:Name="ServicesGrid" IsReadOnly="True" SelectionChanged="ServicesGrid_SelectionChanged" ></DataGrid>
        </StackPanel>

        <TabControl Grid.Row="2">
            <TabItem Header="Actions">
                <DataGrid x:Name="ActionsDataGrid" IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="Text Editors"></TabItem>
        </TabControl>
    </Grid>
</Page>
