                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>
                            --><!--Show round button--><!--
                            <Button x:Name="ActivityNumberButton" Height="35" Width="35">
