<Page x:Class="Ginger.BusinessFlowsLibNew.AddActionMenu.POMNavPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:UCTreeView="clr-namespace:GingerWPF.UserControlsLib.UCTreeView"
      xmlns:local="clr-namespace:Ginger.BusinessFlowsLibNew.AddActionMenu"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="POMNavAction">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300*"/>
            <RowDefinition Height="275*"/>
        </Grid.RowDefinitions>

        <UCTreeView:TreeView1 x:Name="xTreeView" TreeTitle="Title" Grid.Row="0">
        </UCTreeView:TreeView1>

        <GridSplitter ResizeDirection="Rows" Grid.Row="1" Height="5" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="Black" IsEnabled="True" />
        <Frame x:Name="xPOMLDetailsFrame" Grid.Row="1" Margin="0,5,0,0" />
    </Grid>
</Page>
