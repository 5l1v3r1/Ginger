    <Page x:Class="Ginger.ApplicationModelsLib.POMModels.AddEditPOMWizardLib.LearnConfigWizardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="Learn Config">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="211*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Label>Would you like to learn the full screen or frgmanet of it</Label>
            <RadioButton Content="Full Screen" IsChecked="True"/>
            <RadioButton Content="Fragment"/>

        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label>Would you like auto learn or manual</Label>
            <RadioButton Content="Auto Learn" IsChecked="True"/>
            <RadioButton Content="Manual"/>

        </StackPanel>





    </Grid>
</Page>
