<Page x:Class="Ginger.Actions._Common.ActUIElementLib.LocateByPOMElement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"       
      xmlns:Actions="clr-namespace:Ginger.Actions"       
      mc:Ignorable="d" 
      d:DesignHeight="40" d:DesignWidth="1000"
	Title="LocateByPOMElement">

    <Grid Margin="0,-2,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="154"/>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="145"/>
            <ColumnDefinition Width="150*"/>
        </Grid.ColumnDefinitions>
        <Label Style="{StaticResource @SubInputFieldLabelStyle}" Grid.Column="0" Background="{StaticResource @Skin1_ColorC}">Select POM:</Label>
        <TextBox x:Name="HTMLReportFolderTextBox" Margin="0,-2,5,0" Grid.Column="1" Style="{StaticResource @TextBoxStyle}" Height="25" IsEnabled="False"></TextBox>
        <Button x:Name="SelectFolderButton" Style="{StaticResource @InputButtonStyle}" Grid.Column="2" Height="25"  Margin="0,-2,0,0" VerticalAlignment="Center" Click="SelectPOM_Click">...</Button>
        <Label Style="{StaticResource @SubInputFieldLabelStyle}" Grid.Column="3" Background="{StaticResource @Skin1_ColorC}">Select POM Element:</Label>
        <ComboBox Grid.Column="4" x:Name="POMElementComboBox" SelectionChanged="POMElementComboBox_SelectionChanged" Height="25" Background="{StaticResource @Skin1_ColorC}" Style="{StaticResource @InputComboBoxStyle}" Grid.Row="0" />
    </Grid>
</Page>
