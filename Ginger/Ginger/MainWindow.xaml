<Window x:Class="Ginger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ginger"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label  FontSize="30">The full Ginger source code will move to Git before the end of 2018</Label>
            <Label FontSize="20">We are working on moving it from TFS to Git</Label>
            <Label  FontSize="20">We will upload the full source code for everyone to enjoy</Label>
        </StackPanel>
    </Grid>
</Window>
