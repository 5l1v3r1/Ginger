    <Window x:Class="GingerWPF.DragDropLib.DragDropWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls"
        Title="DragDropWindow" Height="50" Width="272" Opacity="0.8" WindowStyle="None"
        
        >
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>

        <usercontrols:ImageMakerControl x:Name="xDragOperationImage" Grid.Column="0" SetAsFontImageWithSize="25" ImageType="Blocked"  Width="25" Height="25" FontWeight="Thin" VerticalAlignment="Center" HorizontalAlignment="Center" ImageToolTip="" />

        <Label x:Name="HeaderLabel" Content="Header" FontWeight="Bold" Foreground="{StaticResource $amdocsLogoLinarGradientBrush}" Background="White" Grid.Column="2"/>
        <!--<Image x:Name="DragIconImage" Source="{StaticResource @PassIconWithBack_Large.png}" Grid.Column="1"/>-->
    </Grid>
</Window>
