<UserControl x:Class="Ginger.BusinessFlowWindows.ucBusinessFlowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"          
      xmlns:usercontrols="clr-namespace:Amdocs.Ginger.UserControls" 
      mc:Ignorable="d" 
      d:DesignHeight="30" d:DesignWidth="365">

    <Grid x:Name="xBFGrid" Background="{StaticResource $BackgroundColor_LightGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="235"/>
            <ColumnDefinition Width="28"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="xBFTitleLbl" Style="{StaticResource $LabelStyle}" Grid.Column="0" Content="Business Flow:" VerticalAlignment="Top"/>
        <TextBox x:Name="xBFTextBox" Grid.Column="1" Style="{StaticResource $TextBoxStyle}" Height="25" Width="230" HorizontalAlignment="Left" IsReadOnly="True" VerticalAlignment="Top" Margin="2,0,2,3"></TextBox>
        <usercontrols:ucButton Grid.Column="2" x:Name="xSelectBF" HorizontalAlignment="Left" ToolTip="Select Business Flow" ButtonType="ImageButton" ButtonFontImageSize="20" ButtonImageWidth="20" ButtonImageHeight="20" ButtonImageType="Edit" Click="xSelectBF_Click" VerticalAlignment="Top" Margin="-5,-8,0,0"  />
        <usercontrols:ucButton Grid.Column="3" x:Name="xGoToAutomateBtn" ButtonType="ImageButton" HorizontalAlignment="Center" ButtonFontImageSize="16" ButtonImageWidth="16" ButtonImageHeight="16" ButtonImageType="GoNext" Click="xGoToAutomateBtn_Click" ToolTip="Go To Automate Tab" Visibility="Hidden" Margin="-5,-5,0,0" />
    </Grid>
</UserControl>

