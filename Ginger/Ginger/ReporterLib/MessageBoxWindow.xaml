<Window x:Class="Ginger.ReporterLib.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ginger Message" Height="200" Width="400" WindowStyle="ThreeDBorderWindow" ShowInTaskbar="False"  
        WindowStartupLocation="CenterScreen" Topmost="True" Background="LightSlateGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12"/>
            <RowDefinition/>
            <RowDefinition Height="44"/>
        </Grid.RowDefinitions>

        <Label x:Name="xMessageTextLabel" Grid.Row="1" FontSize="16" FontWeight="Bold">Message Text</Label>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
            <Button x:Name="xOKButton" Click="xOKButton_Click">OK</Button>
            <Button x:Name="xYesButton" Click="XYesButton_Click">Yes</Button>
            <Button x:Name="xNoButton" Click="XNoButton_Click">No</Button>
            <Button x:Name="xCancelButton" Click="XCancelButton_Click">Cancel</Button>
        </StackPanel>

    </Grid>
</Window>
